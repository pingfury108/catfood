{% extends "layout" %}
{% block title %}{{ super() }} | {{ food.title }} {% endblock %}
{% block body %}
<div class="flex flex-row w-full">
  <div class="w-1/3">
    <div>
      <img src="{{ food.img }}"></img>
    </div>
    <div>
      <div>
        <label>品名:</label>
        <span>{{ food.product_name }}</span>
      </div>
      <div>
        <label>品牌商:</label>
        <span>{{ food.brand_owner }}</span>
      </div>
      <div>
        <label>品牌商地址:</label>
        <span>{{ food.brand_owner_addr }}</span>
      </div>
      <div>
        <label>生产商:</label>
        <span>{{ food.manufacturer }}</span>
      </div>
      <div>
        <label>生产商地址:</label>
        <span>{{ food.manufacturer_addr }}</span>
      </div>
      <div>
        <label>生产许可证号:</label>
        <span>{{ food.manufacturer_license_number }}</span>
      </div>
      <div>
        <label>产品执行标准:</label>
        <span>{{ food.product_standard }}</span>
      </div>
      <div>
        <label>净含量:</label>
        <span>{{ food.net_content }}</span>
      </div>
      <div>
        <label>参考价格:</label>
        <span>{{ food.reference_price }}</span>
      </div>
    </div>
  </div>
  <div class="w-1/3">
    <div>
      <h1>{{ food.title }}</h1>
      <p>{{ food.describe }}</p>
    </div>
    <div class="pt-4">
      <h5>原料组成</h5>
      <p> {{ food.ingredients }} </p>
    </div>
    <div class="pt-4">
      <h5>制作方式</h5>
      <p>
        {{ food.production_method }}
      </p>
    </div>
    <div class="pt-4">
      <h5>添加剂组成</h5>
      <p>{{ food.additives }}</p>
    </div>
    <div class="pt-4">
      <h5>产品成分分析保证值</h5>
      <p>{{ food.guaranteed_analysis }}</p>
    </div>
    <div class="pt-4">
      <h5>评论</h5>
    </div>
  </div>
  <div class="w-1/3">
    <div>
      <a href="/cat/food/edit/{{ food.gid }}">编辑</a>
    </div>
  </div>
</div>
</div>
{% endblock %}
